@model List<Testimonial>
@{
	ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Layout/Index.cshtml";
}


	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Referanslar</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Referans Bilgileri</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Referans işlemlerini aşağıdan yapabilirsiniz.
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Ad Soyad</th>
										<th scope="col">Ünvan-Şirket</th>
										<th scope="col">Açıklama</th>
										<th scope="col">Resim URL</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
										    <td>@item.TestimonialId</td>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.ImageUrl</td>
										    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
										    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}												
								</tbody>
							</table>
						<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Referans</a>
						</div>
					</div>
				</div>				
			</div>
		</div>
	</div>

