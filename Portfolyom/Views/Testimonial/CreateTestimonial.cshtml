@model Testimonial
@{
	ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Ad Soyad</label>
							<input type="text" asp-for="NameSurname" class="form-control" />
							<br />
							<label>Ünvan-Şirketi</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Açıklaması</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />	
							<label>Resim URL</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<button class="btn btn-primary">Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

