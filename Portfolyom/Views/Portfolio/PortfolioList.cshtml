@model List<Portfolio>
@{
	ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
}


	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Portfolyo</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Portfolyo Listesi</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Portfolyo işlemlerini aşağıdan yapabilirsiniz.
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Başlık</th>
										<th scope="col">Alt başlık</th>
										<th scope="col">Resim URL</th>
										<th scope="col">URL</th>
										<th scope="col">Açıklama</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
										    <td>@item.PortfolioId</td>
											<td>@item.Title</td>
											<td>@item.SubTitle</td>
											<td>@item.ImageUrl</td>
											<td>@item.Url</td>
											<td>@item.Description</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}												
								</tbody>
							</table>
						<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni</a>
						</div>
					</div>
				</div>				
			</div>
		</div>
	</div>

